<Window x:Class="pifScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pifScanner"
        mc:Ignorable="d"
        Title="pifScanner" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Fichier">
                <MenuItem Header="Quitter" Click="MenuQuit_Click" />
            </MenuItem> 
        </Menu>
        
        <StackPanel Orientation="Horizontal" Margin="20">
            <Label Content="IP de départ :" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIpStart" Margin="5" Width="120"/>

            <Label Content="IP de fin :" VerticalAlignment="Center" Margin="10,0"/>
            <TextBox x:Name="txtIpEnd" Margin="5" Width="120"/>

            <Button x:Name="btnSearch" Content="Lancer le scan" Margin="10,0" VerticalAlignment="Center" Click="btnSearch_Click"/>
        </StackPanel>

        <DataGrid x:Name="dataGridDevice" Grid.Row="1" Margin="10" AutoGenerateColumns="True"/>
    </Grid>
</Window>
